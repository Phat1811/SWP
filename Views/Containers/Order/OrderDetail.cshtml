@using MedicalStore.Utils.Common
@using MedicalStore.DAO.Interface;
@{
    var order = (Order)this.ViewData["order"];
    var listOrderItemDetail = (List<OrderItemDetail>)this.ViewData["listOrderItemDetail"];
    var customerName = this.ViewData["customerName"];
}
<main class="bg-white px-4 pt-16 pb-24 sm:px-6 sm:pt-24 lg:px-8 lg:py-32">
    <div class="max-w-3xl mx-auto">
        <div class="max-w-xl">
            <p class="mt-2 text-4xl font-extrabold tracking-tight sm:text-5xl">Order detail page</p>
            <h3 class="mt-2 text-base text-gray-500">Order number #@order.OrderId</h3>
            <section aria-labelledby="order-heading" class="mt-10 border-t border-gray-200">
                <h2 id="order-heading" class="sr-only">Your order</h2>

                <h3 class="sr-only">Items</h3>
                @foreach (OrderItemDetail oid in listOrderItemDetail)
                {
                    <div class="py-10 border-b border-gray-200 flex space-x-6">
                        <img src="@oid.ProductImageUrl" alt="@oid.ProductName" class="flex-none w-20 h-20 object-center object-cover bg-gray-100 rounded-lg sm:w-40 sm:h-40">

                        <div class="flex-auto flex flex-col">
                            <div>
                                <h4 class="font-medium text-gray-900">
                                    <a href="#">@oid.ProductName</a>
                                </h4>
                                <p class="mt-2 text-sm text-gray-600">Shop Name: @oid.ShopName</p>
                                <p class="mt-2 text-sm text-gray-600">Retail Price: @oid.RetailPrice</p>
                            </div>
                            <div class="mt-6 flex-1 flex items-end">
                                <dl class="flex text-sm divide-x divide-gray-200 space-x-4 sm:space-x-6">
                                    <div class="flex">
                                    <dt class="font-medium text-gray-900">Quantity</dt>
                                    <dd class="ml-2 text-gray-700">@oid.Quantity</dd>
                            </div>
                            <div class="flex">
                                <dt class="font-medium text-gray-900">Sale Price</dt>
                                <dd class="ml-2 text-gray-700">@oid.SalePrice.ToString()</dd>
                            </div>
                            </dl>
                        </div>
                    </div>
            </div>
        }

            </div>

            <h3 class="sr-only">Summary</h3>

            <dl class="space-y-6 border-t border-gray-200 text-sm pt-10">
                <div class="flex justify-between">
                <dt class="font-medium text-gray-900">Subtotal</dt>
                <dd class="text-gray-700">@order.Total.ToString()</dd>
                </div>
                <div class="flex justify-between">
                <dt class="font-medium text-gray-900">Create Date</dt>
                <dd class="text-gray-900">@order.CreateDate</dd>
                </div>
                <div class="flex justify-between">
                <dt class="font-medium text-gray-900">Customer</dt>
                <dd class="text-gray-900">@customerName.ToString()</dd>
                </div>
                <div class="flex justify-between">
                <dt class="font-medium text-gray-900">Status</dt>
                <dd class="text-gray-900">@order.Status</dd>
                </div>
            </dl>
            </div>
            </section>
            </div>
    </main>